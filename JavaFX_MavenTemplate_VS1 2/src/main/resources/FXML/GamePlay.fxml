<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GamePlayController">

    <!-- Dealer's Cards at the center top -->
    <VBox alignment="CENTER" layoutX="340.0" layoutY="21.0" spacing="20">
        <Text style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Dealer's Cards" />
        <HBox spacing="10">
            <ImageView fx:id="dealerCard1" fitHeight="150" fitWidth="100" />
            <ImageView fx:id="dealerCard2" fitHeight="150" fitWidth="100" />
            <ImageView fx:id="dealerCard3" fitHeight="150" fitWidth="100" />
        </HBox>
    </VBox>

    <!-- Player 1's Cards at the bottom left -->
    <VBox alignment="TOP_CENTER" layoutX="77.0" layoutY="422.0" prefHeight="230.0" prefWidth="320.0" spacing="20">
        <Text style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Player 1's Cards" />
        <HBox spacing="10">
            <ImageView fx:id="playerOneCard1" fitHeight="150" fitWidth="100" />
            <ImageView fx:id="playerOneCard2" fitHeight="150" fitWidth="100" />
            <ImageView fx:id="playerOneCard3" fitHeight="150" fitWidth="100" />
        </HBox>
    </VBox>

    <!-- Player 2's Cards at the bottom right -->
    <VBox alignment="TOP_CENTER" layoutX="571.0" layoutY="422.0" prefHeight="230.0" prefWidth="320.0" spacing="20">
        <Text style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Player 2's Cards" />
        <HBox spacing="10">
            <ImageView fx:id="playerTwoCard1" fitHeight="150" fitWidth="100" />
            <ImageView fx:id="playerTwoCard2" fitHeight="150" fitWidth="100" />
            <ImageView fx:id="playerTwoCard3" fitHeight="150" fitWidth="100" />
        </HBox>
    </VBox>

    <!-- Player 1's Bet Buttons -->
    <Button fx:id="p1AnteBetButton" layoutX="59.0" layoutY="215.0" mnemonicParsing="false" onAction="#handleP1AnteBet" text="Place Ante Wager" />
    <Button fx:id="p1PPButton" layoutX="48.0" layoutY="263.0" mnemonicParsing="false" onAction="#handleP1PPBet" text="Place Pair-Plus Wager" />

    <!-- Player 2's Bet Buttons -->
    <Button fx:id="p2AnteBetButton" layoutX="831.0" layoutY="215.0" mnemonicParsing="false" onAction="#handleP2AnteBet" text="Place Ante Wager" />
    <Button fx:id="p2PPButton" layoutX="820.0" layoutY="263.0" mnemonicParsing="false" onAction="#handleP2PPBet" text="Place Pair-Plus Wager" />

    <!-- Player 1's Bet Amount TextField (Initially hidden) -->
    <TextField fx:id="p1BetAmountTextField" layoutX="59.0" layoutY="305.0" prefWidth="200.0" promptText="Enter Player 1 Bet Amount" visible="false" />

    <!-- Player 2's Bet Amount TextField (Initially hidden) -->
    <TextField fx:id="p2BetAmountTextField" layoutX="786.0" layoutY="305.0" prefWidth="200.0" promptText="Enter Player 2 Bet Amount" visible="false" />

    <!-- Player 1's Confirm Bet Button (Initially hidden) -->
    <Button fx:id="p1ConfirmBetButton" layoutX="74.0" layoutY="350.0" onAction="#confirmP1Bet" text="Confirm Bet" visible="false" />

    <!-- Player 2's Confirm Bet Button (Initially hidden) -->
    <Button fx:id="p2ConfirmBetButton" layoutX="846.0" layoutY="350.0" onAction="#confirmP2Bet" prefHeight="15.0" prefWidth="79.0" text="Confirm Bet" visible="false" />

</Pane>
